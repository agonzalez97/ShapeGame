<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:columnWidth="320dp"
    android:orientation="vertical"
    android:rowCount="2"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/circulo"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_row="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circulo"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/triangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/myimage1"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/triangleshde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myimage2" />

    <LinearLayout
        android:id="@+id/rombo"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rombo"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/trapezi"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <ImageView
        android:id="@+id/myimage2"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/triangleshde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myimage3" />

    <LinearLayout
        android:id="@+id/trapezi"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/trapezi"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <ImageView
        android:id="@+id/myimage3"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/triangleshde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/triangle"
        android:layout_width="159dp"
        android:layout_height="152dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/triangle"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/rombo"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/myimage4"
        android:layout_width="106dp"
        android:layout_height="78dp"
        android:layout_row="2"
        android:layout_column="9"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/triangleshde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/myimage1"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>